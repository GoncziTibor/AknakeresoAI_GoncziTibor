<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controller.GameController">
    <top>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="statusLabel" text="Válassz egy mezőt..."/>
            <Button text="Új játék" onAction="#handleNewGame"/>
            <Button text="Mentés adatbázisba" onAction="#handleSaveToDatabase"/>
        </VBox>
    </top>

    <center>
        <GridPane fx:id="gameGrid" hgap="2" vgap="2">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
    </center>
</BorderPane>